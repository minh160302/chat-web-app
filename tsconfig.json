{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES5",
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "es2017", "dom", "es2016"],
    "typeRoots": [
      "node_modules/@types"
    ],
    // "allowJs": true,
    "types": ["node"],
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
        "src/*": ["src/*"],
        "pages/*": ["src/views/*"],
    },
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
  ]
}
